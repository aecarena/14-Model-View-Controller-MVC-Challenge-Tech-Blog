<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{content}}</p>
  <p>Created by {{user.name}} on {{format_date date_posted}}</p>
 
  <h2>Comments</h2>
  {{#each comments as |comment| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <p>{{comment.content}}</p>
  
    
    <p>{{comment.user.name}} commented on {{format_date_time comment.date_posted}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
{{/each}}
  <p>
    <textarea name="comment" id="comment-text"></textarea>
    <button id="comment-button" class="btn btn-primary">Add a Comment!</button>
  </p>

</div>
<script src="/comment.js"></script>